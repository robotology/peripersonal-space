<application>
    <name>PPS with Optical Flow</name>

    <dependencies>
    </dependencies>

    <module>
        <name>pf3dTracker</name>
        <parameters>--from pf3dTracker.ini</parameters>
        <node>icub-b2</node>
        <tag>PF3DTracker</tag>
    </module>
    <module>
        <name>motionCUT</name>
        <parameters>--recogThres 0.015 --blobMinSizeThres 20 --framesPersistence 3 --cropSize</parameters>
        <node>icub-b1</node>
        <stdio></stdio>
    </module>
    <module>
        <name>templatePFTracker</name>
        <parameters></parameters>
        <node>icub-b2</node>
        <stdio></stdio>
    </module>
    <module>
        <name>SFM</name>
        <parameters></parameters>
        <node>icub13</node>
        <stdio></stdio>
    </module>
    <module>
        <name>visuoTactileWrapper</name>
        <parameters>--noDoubleTouch</parameters>
        <node>icub15</node>
        <stdio></stdio>
    </module>
    <module>
        <name>ultimateTracker</name>
        <parameters></parameters>
        <node>icub15</node>
        <stdio></stdio>
    </module>
    <module>
        <name>visuoTactileRF</name>
        <parameters>--taxelsFile taxels1D_learned.ini</parameters>
        <node>icub15</node>
        <stdio></stdio>
    </module>
    <module>
        <name>demoAvoidance</name>
        <parameters></parameters>
        <node>icub15</node>
        <stdio></stdio>
    </module>
    <module>
        <name>yarpview</name>
        <parameters>--name /vtRF/left --RefreshTime 33 --x 0 --y 0 --w 400 --h 400 --compact</parameters>
        <node>icub15</node>
        <stdio></stdio>
    </module>
    <module>
        <name>yarpview</name>
        <parameters>--name /vtRF/right --RefreshTime 33 --x 420 --y 0 --w 400 --h 400 --compact</parameters>
        <node>icub15</node>
        <stdio></stdio>
    </module>
    <module>
        <name>yarpview</name>
        <parameters>--name /PF3DT_viewer --RefreshTime 33 --x 980 --y 620 --w 320 --h 260 --compact</parameters>
        <node>icub13</node>
        <tag>PF3DTracker_viewer</tag>
    </module>
    <module>
        <name>yarpview</name>
        <parameters>--name /motionCUT_viewer --RefreshTime 33 --x 980 --y 340 --w 320 --h 260 --compact</parameters>
        <node>icub13</node>
    </module>
    <module>
        <name>yarpview</name>
        <parameters>--name /templatePFTracker_viewer --RefreshTime 33 --x 1280 --y 60 --w 320 --h 260 --compact</parameters>
        <node>icub13</node>
    </module>
    <module>
        <name>yarpview</name>
        <parameters>--name /dispViewer --RefreshTime 33 --x 1600 --y 60 --w 320 --h 260 --compact</parameters>
        <node>icub13</node>
    </module>

    <connection>
        <from>/skinManager/skin_events:o</from>
        <to>/visuoTactileRF/skin_events:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
        <from>/icub/camcalib/left/out</from>
        <to>/pf3dTracker/video:i</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/pf3dTracker/video:o</from>
        <to>/PF3DT_viewer</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/pf3dTracker/data:o</from>
        <to>/visuoTactileWrapper/pf3dTracker:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
        <from>/icub/camcalib/right/out</from>
        <to>/SFM/right:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
        <from>/icub/camcalib/left/out</from>
        <to>/SFM/left:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
        <from>/SFM/disp:o</from>
        <to>/dispViewer</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
        <from>/visuoTactileWrapper/gui:o</from>
        <to>/iCubGui/objects</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
        <from>/icub/camcalib/left/out</from>
        <to>/templatePFTracker/left/image:i</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/templatePFTracker/left/image:o</from>
        <to>/templatePFTracker_viewer</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/icub/camcalib/left/out</from>
        <to>/visuoTactileRF/imageL:i</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/icub/camcalib/right/out</from>
        <to>/visuoTactileRF/imageR:i</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/icub/camcalib/left/out</from>
        <to>/motionCUT/img:i</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/motionCUT/img:o</from>
        <to>/motionCUT_viewer</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/visuoTactileWrapper/events:o</from>
        <to>/visuoTactileRF/events:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
    <from>/visuoTactileRF/skin_events:o</from>
        <to>/avoidance/data:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
    <from>/visuoTactileRF/skinGuiForearmL:o</from>
        <to>/skinGui/left_forearm_virtual:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
    <from>/visuoTactileRF/skinGuiForearmR:o</from>
        <to>/skinGui/right_forearm_virtual:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
    <from>/visuoTactileRF/skinGuiHandL:o</from>
        <to>/skinGui/left_hand_virtual:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
    <from>/visuoTactileRF/skinGuiHandR:o</from>
        <to>/skinGui/right_hand_virtual:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
        <from>/visuoTactileRF/imageL:o</from>
        <to>/vtRF/left</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/visuoTactileRF/imageR:o</from>
        <to>/vtRF/right</to>
        <protocol>udp</protocol>
    </connection>
</application>
